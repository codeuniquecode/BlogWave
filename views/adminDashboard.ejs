<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel - BlogWave</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #fff;
      color: #000;
    }
    nav {
      background-color: black !important;
    }
    .navbar-brand {
      color: white !important;
    }
    .sidebar {
      height: 100vh;
      background-color: #000;
      color: white;
      padding-top: 1rem;
    }
    .sidebar a {
      color: white;
      text-decoration: none;
      display: block;
      padding: 0.75rem 1.25rem;
    }
    .sidebar a:hover {
      background-color: white;
      color: black;
    }
    .dashboard-card {
      background-color: #f8f9fa;
      border: 1px solid #dee2e6;
      padding: 1rem;
      border-radius: 0.5rem;
      text-align: center;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand fw-bold fs-3" href="/">BlogWave</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <div class="navbar-nav ms-auto">
          <div class="dropdown">
            <button class="btn dropdown-toggle text-light" data-bs-toggle="dropdown">
              Admin
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3 sidebar">
        <h5 class="text-center">Admin Panel</h5>
        <a href="#">Dashboard</a>
        <a href="#">Manage Users</a>
        <a href="#">Manage Blogs</a>
        <a href="#">Contact Messages</a>
        <a href="#">Activity Logs</a>
        <a href="#">Moderation</a>
      </div>

      <!-- Main Content -->
      <div class="col-md-9 p-4">
        <h2 class="mb-4">Dashboard</h2>
        <div class="row mb-4">
          <div class="col-md-4">
            <div class="dashboard-card">
              <h5>Total Users</h5>
              <p>120</p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="dashboard-card">
              <h5>Total Blogs</h5>
              <p>340</p>
            </div>
          </div>
          <div class="col-md-4">
            <div class="dashboard-card">
              <h5>Messages</h5>
              <p>15</p>
            </div>
          </div>
        </div>

        <!-- Chart -->
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Blog Posts Per Day</h5>
            <canvas id="blogsChart" height="100"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const ctx = document.getElementById('blogsChart').getContext('2d');
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
        datasets: [{
          label: 'Blogs Posted',
          data: [5, 7, 3, 8, 6, 4, 2],
          backgroundColor: 'black'
        }]
      },
      options: {
        scales: {
          y: { beginAtZero: true }
        }
      }
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
