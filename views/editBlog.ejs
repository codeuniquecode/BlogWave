    <style>
        body {
            background-color: black !important;
        }

        .register {
            color: white;
        }

        main {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            height: 100vh;
            width: 100%;
        }

        form {
            display: block;
            margin: auto !important;
            width: 100%;
            /* max-width: 400px; */
            min-width: 70%;
            padding: 15px;
            margin: 20px;
            color: white;
            background-color: black;
            border-radius: 10px;
            box-shadow: 1px 1px 25px white;
            border: 2px solid white;

        }

        #post {
            color: white;
            background-color: black;
            border: 2px solid white;
            border-radius: 10px;
            padding: 10px;
            /* margin: 10px; */
            width: 100%;
            cursor: pointer;
            margin-top: 0.75rem;
            line-height: 1.25;

        }

        #post:hover {
            background-color: white;
            color: black;
            transition: 0.3s;
        }

        @media screen and (max-width: 468px) {
            form {
                width: 90%;
                padding: 1rem;
                margin: 0.5rem;
            }


        }

        .navbar-brand {
            color: white !important;
            font-weight: bolder !important;
        }
        select {
            background-color: black !important;
            color: white !important;
            border: 2px solid white !important;
            border-radius: 10px !important;
        }
        select:hover {
            background-color: white !important;
            color: black !important;
            transition: 0.3s;
