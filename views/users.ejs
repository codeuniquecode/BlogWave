<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users || BlogWave</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        @media screen and (max-width: 768px) {
            .container {
                padding: 0 15px;
            }
            .table-responsive {
                overflow-x: auto;
            }
            .deleteBtn {
                /* margin-top: 5px; */
                margin: 5px 0;
            }
            .btn{
                width: 100%;
                margin-left: -0.5rem;
            }
            
        }
    </style>
</head>
<body>
 
    <div class="container">
        <h1 class="text-center my-4">Manage Users</h1>
         <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/adminDashboard">Back</a></li>
    <li class="breadcrumb-item active" aria-current="page">Manage Users</li>
  </ol>
</nav>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col" class="actions">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% userData.forEach((user) => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.role %></td>
                    <td class="actions">
                        <!-- Add your action buttons here -->
                        <a href="/editUser/<%= user._id %>" class="btn btn-primary btn-sm">Edit</a>
                        <form action="/manageUser/<%= user._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm deleteBtn">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
        





     <% if (typeof flashMessage!='undefined' && flashMessage) { %>
     <div class="toast show position-fixed end-0 bottom-0 mx-3 mb-3" role="alert" aria-live="assertive" aria-atomic="true">
       <div class="toast-header">
         <strong class="me-auto">Notification</strong>
         <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
        </div>
       <div class="toast-body">
          <%= flashMessage %>
        </div>
      </div>
      <% } %>
     <script src="/js/showToast.js"></script>
     <!-- <script src="../public/js/showToast.js"></script> -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
</body>
</html>