<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Blogs || BlogWave</title>

  <!-- Bootstrap CSS CDN -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    .card:hover {
      transform: scale(1.05);
    }
    .card {
      border: none;
      border-radius: 10px;
      
      transition: transform 0.1s ease;
    }
    /* card-img-top use object-fit: cover and height:200px(as needed) */
    /* .card-img-top {
  object-fit: cover !important;
  height: 15rem !important;
  object-position: center;
} */

@media screen and (max-width: 768px) {
  .card-img-top {
    height: 250px !important; /* Adjust the height for smaller screens */
  }
  
}

  </style>
</head>
<body>
  <!-- Navbar -->
  <nav>
    <%- include('./partials/redirect.ejs') %>
  </nav>

  <main class="container mt-1">
    <% if (blogs.length > 0) { %>
      <h1 class="text-center mb-4">Blogs</h1>

      <div class="row">
        <% blogs.forEach((blog) => { %>
          <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card h-100 shadow">
              <img
                src="http://localhost:3000/<%- blog.image %>"
                class="card-img-top"
                alt="blog image"
                style="height: 300px; object-fit: cover;"
              />
              <div class="card-body">
                <h5 class="card-title text-center fw-bold"><%- blog.title %></h5>
                <p class="card-text text-center">By <b><%= blog.author ? blog.author.name : 'Unknown Author' %> </b>  | Date: <%- blog.date %></p>
                <!-- <p class="card-text text-center">Description: <%- blog.description %></p> -->
                <p class="text-center">❤️ Total Likes: 10</p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>

    <% } else { %>
      <h1 class="text-center">No Blogs Found</h1>
    <% } %>
  </main>

  <!-- Bootstrap JS (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
