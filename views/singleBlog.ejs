<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogs || BlogWave</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
        <style>
             .card:hover {
      transform: scale(1.05);
      transition: 0.3s ease;
      box-shadow: 15px 15px 30px rgba(0, 0, 0, 0.2) !important;

    }
    .card {
      border: none;
      border-radius: 10px;
      
    }
             .card-img-top {
            height: auto;
            max-height: 25rem;
            width: 100%;
            object-fit: contain;
        }
   .navbar{
    background-color: black !important;
   }
   button:hover{
    scale: 1.05;
    transition: 0.3s ease;

   }
        </style>
</head>

<body>
    <!-- to show single blogs  -->
    <%- include('./partials/redirect.ejs') %>
 
        <!-- navbar ends -->
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card mb-4 ">
                        <img src="http://localhost:3000/<%= blog.image %>" class="card-img-top" alt="Blog Image">
                        <div class="card-body">
                            <h5 class="card-title text-center fw-bold fs-3">
                                <%= blog.title %>
                            </h5>

                            <p class="card-text fw-bold text-align-center fst-italic " style="text-align: justify;">
                                <%= blog.description %>
                            </p>
                            <p>
                                Posted At: <%-blog.date%>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container mt-5 mb-5">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <h5 class="text-start fw-bold">You may also like</h5>
                    <div class="row mt-1 mt-sm-2 ">
                        <% relatedBlogs.forEach((blog) => { %>
                            <div class="">
                                <ul>
                                    <li> <p class="text-start fs-6 "><a href="/blogs/<%= blog._id %>"><%-blog.title%></a>
                                    </p></li>
                                </ul>
                              
                            </div>
                        <% }) %>
                    </div>
                    <h5 class="text-start fw-bold">More from this author</h5>
                    <div class="row mt-1 mt-sm-2 ">
                        <% sameAuthorBlogs.forEach((blog) => { %>
                            <div class="">
                                <ul>
                                    <li> <p class="text-start fs-6 "><a href="/blogs/<%= blog._id %>"><%-blog.title%></a>
                                    </p></li>
                                </ul>
                              
                            </div>
                        <% }) %>

                </div>

            </div>
        </div>
        <!-- footer starts -->
        <!-- footer -->
         <%-include('./partials/footer.ejs')%>
        <!-- footer ends -->

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
        <script src="https://kit.fontawesome.com/2c8d038c04.js" crossorigin="anonymous"></script>



</body>

</html>